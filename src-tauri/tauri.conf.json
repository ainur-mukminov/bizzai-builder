{
  "package": {
    "productName": "BIZZI AI Builder",
    "version": "2.0.0"
  },
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.bizziaibuilder.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "DeveloperTool",
      "copyright": "Â© 2026 Ainur Mukminov",
      "shortDescription": "Ethical Pentest Automation",
      "longDescription": "Professional security scanning tool"
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline' 'self'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "BIZZI AI Builder 2.0",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
